<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_photo"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardBackgroundColor="@color/colorPrimary"
    tools:ignore="UnusedAttribute">
    <!--android:foreground="@color/color_card_foreground"-->

    <com.example.chars.photocollection.main.widget.CoverImageView
        android:id="@+id/fragment_photo_collection_cover_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:background="@color/colorPrimary_dark" />
</android.support.v7.widget.CardView>